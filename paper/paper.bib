  pages = {231--248},
  keywords = {Exponential random graph models,p* models,Statistical models for social networks},
  file = {ScienceDirect Full Text PDF:/Users/malevy/Library/Application Support/Zotero/Profiles/vpg7jtxl.default/zotero/storage/H9HI4PJF/Goodreau - 2007 - Advances in exponential random graph (p) models a.pdf:application/pdf;ScienceDirect Snapshot:/Users/malevy/Library/Application Support/Zotero/Profiles/vpg7jtxl.default/zotero/storage/SS94IM9B/S0378873306000402.html:text/html}
