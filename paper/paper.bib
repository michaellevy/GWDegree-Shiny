  pages = {1117--1126},
  keywords = {Connectivity,ERGM,fMRI,Graph analysis,Network,p-star},
  file = {ScienceDirect Full Text PDF:/Users/malevy/Library/Application Support/Zotero/Profiles/vpg7jtxl.default/zotero/storage/MZVRAECS/Simpson et al. - 2012 - An exponential random graph modeling approach to c.pdf:application/pdf;ScienceDirect Snapshot:/Users/malevy/Library/Application Support/Zotero/Profiles/vpg7jtxl.default/zotero/storage/WX29D3HF/S1053811912000882.html:text/html}
