  urldate = {2016-06-13},
  date = {2006-12-01},
  pages = {99--153},
  file = {Full Text PDF:/Users/malevy/Library/Application Support/Zotero/Profiles/vpg7jtxl.default/zotero/storage/AJX9KUNB/Snijders et al. - 2006 - New Specifications for Exponential Random Graph Mo.pdf:application/pdf;Snapshot:/Users/malevy/Library/Application Support/Zotero/Profiles/vpg7jtxl.default/zotero/storage/J6C9EKW3/abstract.html:text/html}
